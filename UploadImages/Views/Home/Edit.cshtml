@model UploadImages.Models.ImageModel

@{
    ViewData["Title"] = "Edit Image";
}

<h1>Edit Image</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" style="width: 100%; height: 100px;"></textarea>
    </div>

    <div>
        <label asp-for="Tags">Tags (comma separated):</label>
        <input type="text" asp-for="Tags" value="@string.Join(", ", Model.Tags)" style="width: 100%;" />
    </div>

    <button type="submit" style="margin-top: 10px;">Save</button>
    <a asp-controller="Home" asp-action="Uploaded" style="margin-left: 10px;">Cancel</a>
</form>
